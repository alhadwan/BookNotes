<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>

</head>
<body>
  <div class="container">

    <div class="row">
      <div class="col-6">
        <a href="/add" class="btn btn-secondary">Add Notes</a>
      </div>

      <!-- <div class="col-4">
        <a href="/edit" class="btn btn-secondary">Edit Notes</a>
      </div> -->

       <div class="col-6">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          Sort by:
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/?sort=rating">Rating</a></li>
          <li><a class="dropdown-item" href="/?sort=date">Date</a></li>
          <li><a class="dropdown-item" href="/?sort=title">Title</a></li>
        </ul>
      </div>
    </div>
  

  </div>
    
      <div class="container d-flex row justify-content-center align-items-center min-vh-100">
        <% if (locals.book && book.length > 0) { %>
          <% book.forEach((post) => { %>
            <div class="row">
              <div class="col-12">
                <h1><%= post.title %></h1>
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                <img src="https://covers.openlibrary.org/b/isbn/<%= post.isbn %>-M.jpg" alt="Book Cover" />
              </div>
              <div class="col-6">
              <h3><%= post.notes %></h3>
              <p>Rating: <%= post.rating %> ‚≠ê</p>
              <p>Read on: <%= post.read_date.toDateString() %></p>
              <p>ISBN: <%= post.isbn %></p>
              <a href="/edit/<%= post.id %>" class="btn btn-primary">Edit</a>
              <form action="/delete/<%= post.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this book?');">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
              </div>
              <hr>
            </div>
          <% }); %>
        <% } else { %>
          <p>No books found.</p>
        <% } %>
      </div>
    
    
</body>
</html>