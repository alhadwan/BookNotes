   <%- include("partials/header.ejs") %>   
      <div class="container d-flex row justify-content-center align-items-center min-vh-100 app-wrapper">
        <main>
            <% if (locals.book && book.length > 0) { %>
              <% book.forEach((post) => { %>
                <div class="row">
                  <div class="col-12">
                    <h1><%= post.title %></h1>
                  </div>
                </div>
                <div class="row">
                  <div class="col-6">
                    <img src="https://covers.openlibrary.org/b/isbn/<%= post.isbn %>-M.jpg" alt="Book Cover" />
                  </div>
                  <div class="col-6">
                  <h3><%= post.notes %></h3>
                  <p>Rating: <%= post.rating %> ‚≠ê</p>
                  <p>Read on: <%= post.read_date.toDateString() %></p>
                  <p>ISBN: <%= post.isbn %></p>
                  <a href="/edit/<%= post.id %>" class="btn btn-primary">Edit</a>
                  <form action="/delete/<%= post.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this book?');">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                  </div>
                  <hr>
                </div>
              <% }); %>
            <% } else { %>
              <p>No books found.</p>
            <% } %>
        </main>
      </div>

    <%- include("partials/footer.ejs") %>